<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="416dp"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/gameDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Game Date:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/gameSelNumbersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/gameDateTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Selected Numbers:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/gameDrawnNumbersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/gameSelNumbersTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Drawn Numbers:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/gameWinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/gameDrawnNumbersTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Win:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="226dp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/gameWinTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Back"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="325dp" />

</androidx.constraintlayout.widget.ConstraintLayout>